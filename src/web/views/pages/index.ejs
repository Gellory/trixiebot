</section>
<section id="about" class="primary">
    <div class="row">
        <div class="col animate" style="transform: translate3d(0, 50px, 0); opacity: 0;">
            <h1 class="spacing">About</h1>
            <%- about %>
            <hr />
            <p><a href="/about"><b>Read more &#8594;</b></a></p>
        </div>
    </div>
</section>
