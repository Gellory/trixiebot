<section id="changelog" class="secondary">
    <div class="row">
        <div class="col">
            <h1 class="spacing">Changelog</h1>
            <% changelog.forEach(function (log) { %>
                <div class="log animate" style="transform: translate3d(-50px, 0, 0); opacity: 0;">
                    <h3><%= log.title %></h3>
                    <p>
                        <% log.message.forEach(function (message) { %>
                            <%= message %><br />
                        <% }); %>
                    </p>
                </div>
            <% }); %>

            <% if (changelog.length === 0) { %>
            <p>No logs published</p>
            <% } %>
        </div>
    </div>
</section>

